#include<stdio.h>
#include<string.h>

int main(void) {

	int t;

	scanf("%d", &t);

	while (t--) {
		int n;
		char insert[30];

		scanf("%d", &n);
		scanf("%s", insert);

		for (int i = 0; i < strlen(insert); i++) {
			for (int j = 0; j < n; j++) {
				printf("%c", insert[i]);
			}
		}

		printf("\n");
	}

	return 0;
}